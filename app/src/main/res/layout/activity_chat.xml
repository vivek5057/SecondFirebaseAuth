<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightYellow"
    tools:context=".ChatActivity">

    <ProgressBar
        android:id="@+id/loading_chats"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_show_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp"
        android:layout_marginTop="5dp"
        />

    <RelativeLayout
        android:id="@+id/edittext_relative"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@color/colorWhite" >


        <ImageView
            android:id="@+id/choose_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:src="@drawable/ic_attachment_48dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"/>

    <EditText
        android:id="@+id/type_message"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="50dp"
        android:layout_height="50dp"
        android:elevation="5dp"
        android:paddingLeft="10dp"
        android:scrollbars="vertical"
        android:hint="\t\tType a message"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="5dp"
        android:elevation="5dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_send_black_48dp"/>

</RelativeLayout>